{
  "name": "jimmyverburgt.new",
  "scripts": {
    "dev": "bun run --hot src/index.tsx",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "css": "bunx tailwindcss -i src/tailwind.css -o public/tailwind.css --watch",
    "build:css": "bunx tailwindcss -i src/tailwind.css -o public/tailwind.css --minify"
  },
  "dependencies": {
    "bun-plugin-tailwind": "^0.1.2",
    "gray-matter": "^4.0.3",
    "hono": "^4.12.2",
    "marked": "^17.0.3",
    "tailwindcss": "^4.2.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0"
  }
}
